<body class="BodyPassword">
    <main>
        <section class="LogInWrapper">
            <form action="">
                <h1>Wachtwoord vergeten</h1>
                <div class="input-box">
                    <input type="text" placeholder="E-mail" required>
                </div>

                <button type="submit" class="btn">Stuur link</button>

                <div class="register-link-password-page">
                    <p>Link niet binnengekregen? <a href="#">Stuur nieuwe link</a>
                    </p>

            </form>
        </section>
        <img src="/images/flamingwheelspink2.png" alt="" width="430">
    </main>
